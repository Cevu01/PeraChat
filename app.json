{
  "expo": {
    "name": "ChatBot",
    "slug": "ChatBot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logoIcon.png",
    "scheme": "chatbot",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Potrebna dozvola za snimanje zvuka."
      }
    },
    "splash": {
      "image": "./assets/logo.png"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "android": {
      "adaptiveIcon": {},
      "permissions": [
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ],
      "package": "com.cevu01.PeraChat"
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "67ed5747-4153-4f27-95b7-a24da5c40b50"
      }
    }
  }
}
